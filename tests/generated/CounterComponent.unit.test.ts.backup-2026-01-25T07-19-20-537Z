import { ToolRegistry } from '@supernal/interface';
import { CounterComponent } from '../src/providers/CounterComponent';

describe('CounterComponent - Unit Tests', () => {
  let provider: CounterComponent;

  beforeEach(() => {
    provider = new CounterComponent();
    ToolRegistry.registerProvider('CounterComponent', provider);
  });

  describe('Increment', () => {
    test('should execute successfully with valid parameters', async () => {
      const result = await ToolRegistry.executeForTesting('CounterComponent.increment', {});
      expect(result.success).toBe(true);
      expect(result.executionTime).toBeGreaterThan(0);
    });

    test('should be executable by AI (aiEnabled: true)', async () => {
      const result = await ToolRegistry.executeForAI('CounterComponent.increment', {});
      expect(result.success).toBe(true);
    });

    test('should have correct metadata', () => {
      const tools = ToolRegistry.getAllTools();
      const toolMeta = tools.get('CounterComponent.increment');
      
      expect(toolMeta).toBeDefined();
      expect(toolMeta!.name).toBe('Increment');
      expect(toolMeta!.aiEnabled).toBe(true);
      expect(toolMeta!.dangerLevel).toBe('safe');
      expect(toolMeta!.requiresApproval).toBe(false);
    });

  });

  describe('Decrement', () => {
    test('should execute successfully with valid parameters', async () => {
      const result = await ToolRegistry.executeForTesting('CounterComponent.decrement', {});
      expect(result.success).toBe(true);
      expect(result.executionTime).toBeGreaterThan(0);
    });

    test('should reject AI execution (aiEnabled: false)', async () => {
      const result = await ToolRegistry.executeForAI('CounterComponent.decrement', {});
      expect(result.success).toBe(false);
      expect(result.error).toContain('not AI-enabled');
    });

    test('should have correct metadata', () => {
      const tools = ToolRegistry.getAllTools();
      const toolMeta = tools.get('CounterComponent.decrement');
      
      expect(toolMeta).toBeDefined();
      expect(toolMeta!.name).toBe('Decrement');
      expect(toolMeta!.aiEnabled).toBe(false);
      expect(toolMeta!.dangerLevel).toBe('safe');
      expect(toolMeta!.requiresApproval).toBe(false);
    });

  });

  describe('Reset', () => {
    test('should execute successfully with valid parameters', async () => {
      const result = await ToolRegistry.executeForTesting('CounterComponent.reset', {});
      expect(result.success).toBe(true);
      expect(result.executionTime).toBeGreaterThan(0);
    });

    test('should be executable by AI (aiEnabled: true)', async () => {
      const result = await ToolRegistry.executeForAI('CounterComponent.reset', {});
      expect(result.success).toBe(true);
    });

    test('should have correct metadata', () => {
      const tools = ToolRegistry.getAllTools();
      const toolMeta = tools.get('CounterComponent.reset');
      
      expect(toolMeta).toBeDefined();
      expect(toolMeta!.name).toBe('Reset');
      expect(toolMeta!.aiEnabled).toBe(true);
      expect(toolMeta!.dangerLevel).toBe('safe');
      expect(toolMeta!.requiresApproval).toBe(false);
    });

  });

  describe('Safety Controls', () => {
    test('should enforce AI safety defaults', () => {
      const stats = ToolRegistry.getStats();
      
      // Verify dangerous tools require approval
      expect(stats.byDangerLevel.dangerous).toBeGreaterThanOrEqual(0);
      expect(stats.byDangerLevel.destructive).toBeGreaterThanOrEqual(0);
      
      // Verify approval requirements
      expect(stats.requiresApproval).toBeGreaterThanOrEqual(stats.byDangerLevel.dangerous + stats.byDangerLevel.destructive);
    });

  });

});
