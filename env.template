# Environment Variables Template for Supernal Interface Demo
# Copy this file to .env.local and fill in your values

# ===================
# CopilotKit Integration
# ===================
# OpenAI API key for CopilotKit runtime
OPENAI_API_KEY=sk-your-api-key-here

# Enable CopilotKit chat (set to 'true' to use CopilotKit, 'false' for native chat)
NEXT_PUBLIC_USE_COPILOTKIT=true

# Google Tag Manager
NEXT_PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX

# HubSpot Integration (Early Access Form)
# Using same portal and form as supernal-coding documentation
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=46224345
NEXT_PUBLIC_HUBSPOT_FORM_ID=8f9b35de-f230-430c-ab8e-062afd49fed3

# Dashboard Integration
NEXT_PUBLIC_DASHBOARD_PORT=3001
NEXT_PUBLIC_DASHBOARD_ENABLED=true

# Application Environment
NODE_ENV=development

# Optional: Analytics and Tracking
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_DEBUG_MODE=false
