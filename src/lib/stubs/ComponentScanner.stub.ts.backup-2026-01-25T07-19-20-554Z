/**
 * Browser-safe stub for ComponentScanner
 * 
 * ComponentScanner is server-only (uses Node.js fs/glob modules).
 * This stub prevents browser bundle errors and provides a helpful error message.
 */

export class ComponentScanner {
  constructor(config: any) {
    throw new Error(
      'ComponentScanner is server-only and cannot be used in the browser. ' +
      'Use it in Node.js scripts or API routes instead.'
    );
  }
}

export type ComponentScannerConfig = any;
export type ComponentScanResult = any;
export type ComponentMigrationChange = any;
export type ComponentMigrateResult = any;

